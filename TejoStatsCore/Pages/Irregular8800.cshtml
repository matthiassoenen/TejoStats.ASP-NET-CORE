                        @foreach (System.Data.DataColumn column in Model.NoDoorverwezen.Columns)
                        {
                            <th>@column.ColumnName</th>
                        }
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (System.Data.DataRow row in Model.NoDoorverwezen.Rows)
                    {
                        <tr>
                            @foreach (var item in row.ItemArray)
                            {
                                <td>@item</td>
                            }
                        </tr>
                    }
                    </tbody>
                }
                else
                {
                    <tr><td>Geen resultaten gevonden.</td></tr>
                }
            </table>
        </div>
        
        <div class="table-container">
            <table class="table">
                @if (Model.WrongRegistration.Rows.Count > 0)
                {
                    <thead>
                    <tr>
                        @foreach (System.Data.DataColumn column in Model.WrongRegistration.Columns)
                        {
                            <th>@column.ColumnName</th>
                        }
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (System.Data.DataRow row in Model.WrongRegistration.Rows)
                    {
                        <tr>
                            @foreach (var item in row.ItemArray)
                            {
                                <td>@item</td>
                            }
                        </tr>
                    }
                    </tbody>
                }
                else
                {
                    <tr><td>Geen resultaten gevonden.</td></tr>
                }
            </table>
        </div>

        <div class="table-container">
            <table class="table">
                @if (Model.CountWrongRegistration.Rows.Count > 0)
                {
                    <thead>
                        <tr>
                            @foreach (System.Data.DataColumn column in Model.CountWrongRegistration.Columns)
                            {
                                <th>@column.ColumnName</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in Model.CountWrongRegistration.Rows)
                        {
                            <tr>
                                @foreach (var item in row.ItemArray)
                                {
                                    <td>@item</td>
                                }
                            </tr>
                        }
                    </tbody>
                }
                else
